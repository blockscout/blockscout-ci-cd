{
  "name": "blockscout-deployment",
  "version": "0.0.1",
  "main": "main.js",
  "types": "main.ts",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "import": "cdk8s import",
    "lint": "eslint . --ext .ts",
    "synth": "tsc && cdk8s synth",
    "deploy": "tsc && node main.js",
    "start": "npm run deploy && npm run forward",
    "stop": "kubectl delete namespace $NAMESPACE_NAME && pkill -f kubectl",
    "forward": "kubectl --namespace $NAMESPACE_NAME port-forward deployments/deployment $PORT:$PORT $PORT_PG:$PORT_PG $PORT_NETWORK_HTTP:$PORT_NETWORK_HTTP $PORT_NETWORK_WS:$PORT_NETWORK_WS &",
    "compile": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "upgrade": "npm i cdk8s@latest cdk8s-cli@latest",
    "upgrade:next": "npm i cdk8s@next cdk8s-cli@next"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.16.3",
    "cdk8s": "^2.3.22",
    "cdk8s-plus-22": "^2.0.0-rc.14",
    "constructs": "^10.1.34",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^14.18.21",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "cdk8s-cli": "^2.0.17",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.7.3"
  }
}
